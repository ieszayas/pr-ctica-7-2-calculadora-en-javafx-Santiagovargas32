<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10" stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.CalculadoraController">

    <!-- Pantalla de la calculadora -->
    <Label fx:id="display" prefHeight="70.0" prefWidth="260.0" styleClass="display" text="0" alignment="CENTER"/>

    <!-- Fila superior con botones de memoria y cambio de signo -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleMemoryAdd" styleClass="button memory" text="M+" />
        <Button onAction="#handleMemoryClear" styleClass="button memory" text="MC" />
        <Button onAction="#handleClear" styleClass="button button-clear" text="C" />
        <Button onAction="#handleChangeSign" styleClass="button button-operator" text="±" />
    </HBox>

    <!-- Filas de la calculadora -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleButton" styleClass="button" text="7" />
        <Button onAction="#handleButton" styleClass="button" text="8" />
        <Button onAction="#handleButton" styleClass="button" text="9" />
        <Button onAction="#handleButton" styleClass="button button-operator" text="/" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleButton" styleClass="button" text="4" />
        <Button onAction="#handleButton" styleClass="button" text="5" />
        <Button onAction="#handleButton" styleClass="button" text="6" />
        <Button onAction="#handleButton" styleClass="button button-operator" text="*" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleButton" styleClass="button" text="1" />
        <Button onAction="#handleButton" styleClass="button" text="2" />
        <Button onAction="#handleButton" styleClass="button" text="3" />
        <Button onAction="#handleButton" styleClass="button button-operator" text="+" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleButton" styleClass="button" text="0" />
        <Button onAction="#handleDecimal" styleClass="button button-operator" text="." />
        <Button onAction="#handleEqual" styleClass="button button-equal" text="=" />
        <Button onAction="#handleButton" styleClass="button button-operator" text="-" />
    </HBox>

    <!-- Nueva fila con botón de borrar -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleDelete" styleClass="button button-delete" text="DEL" />
    </HBox>

</VBox>
